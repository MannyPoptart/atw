---
const allPosts = await Astro.glob('../pages/posts/*.md');

import changeTheme from '../layouts/BaseLayout.astro';
---

<div class='navbar' data-theme='dark'>

    <div class='navbar mx-auto'>
        <h1 class=' sm:text-lg text-md text-center'>Local Coffee Shop Ratings</h1>
    </div>

    <details class='dropdown'>
        <summary class='btn m-1 text-center'>Themes</summary>
        <ul class='dropdown-content menu rounded-box z-[1] w-24 bg-black p-2 text-center'>
            <li>Light</li>
            <li>Dark</li>
            <li>Coffee</li>
        </ul>
    </details>

    <div class='navbar justify-end gap-2 m-auto'>
        <a class='btn btn-ghost border-white' href='/'>Home</a>
        <a class='btn btn-ghost border-white' href='/blog'>Blog</a>
        <a class='btn btn-ghost border-white' href='/contact'>Contact</a>
    </div>

</div>