---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Blog";

const allPostsLocations = await Astro.glob('../pages/posts/*.md');

---

<BaseLayout pageTitle={pageTitle}>

	<div class="h-screen bg-yellow-900 text-black">
		
		<h1 class='p-2 text-center'>Welcome to the Blog</h1>

		<p class='p-2 text-center'>This is a simple blog site.</p>

		<ul class='grid col-3 row-3'>
			{
				allPostsLocations.map((post) => 
				<li class='text-white'><a href={post.url}><img src='' alt={post.title}></a></li>
				)
			}
		</ul>
	
	</div>

</BaseLayout>