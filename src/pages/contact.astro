---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Contact";
---

<BaseLayout pageTitle={pageTitle}>

	<div class='space-y-4 m-4'>
		
		<h1 class='text-center text-2xl'>Contact Us</h1>

		<p class='text-center'>Please fill out the form below to contact us.</p>

		<form class='flex flex-col justify-center'>
			<label for='name'>Name:</label>
			<input type='text' id='name' name='name' class='p-2 m-2 border-2 border-black rounded' required>
			<label for='email'>Email:</label>
			<input type='email' id='email' name='email' class='p-2 m-2 border-2 border-black rounded' required>
			<label for='message'>Message:</label>
			<textarea id='message' name='message' class='p-2 m-2 border-2 border-black rounded' required></textarea>
			<input type='submit' value='Submit' class='btn m-2'>
		</form>

		

	</div>
	
</BaseLayout>